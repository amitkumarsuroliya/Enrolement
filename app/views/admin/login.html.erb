<div style="margin-top: 40px;"></div>
<div class="col-md-offset-2">
  <%= form_tag("/admin/login", :method => "post")  do %>
    <fieldset>
      <legend>Please Log In</legend>

      <div>
        <label for="name">Name:</label>
        <%= text_field_tag :name, params[:name], :style => "margin-left: 30px;" %>
      </div>
      <br/>
      <div>
        <label for="password">Password:</label>
        <%= password_field_tag :password, params[:password] %>
      </div>
      <br/>
      <div>
        <%= submit_tag "Login", :class => "btn btn-primary", :style => "color: white; margin-left: 80px;" %>
      </div>
    </fieldset>
  <% end %>
  <br/><br/>
  <%= link_to "<i class='glyphicon glyphicon-plus-sign'></i> New Applicant".html_safe, new_applicant_path, :class => "btn btn-success", :style => "color:white; margin-left: 80px;" %>
</div>
